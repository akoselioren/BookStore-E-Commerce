@model BookStore.Models.Book

@{
    ViewData["Title"] = "Kitap Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kitap Detayı</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Kitap Adı :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Sayfa Sayısı :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PageCount)
        </dd>
        <dt class = "col-sm-2">
            Yayın Tarihi :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublishDate)
        </dd>
        <dt class = "col-sm-2">
            Açıklama :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Resim Yolu :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImagePath)
        </dd>
        <dt class = "col-sm-2">
            Fiyat
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Stok Adedi :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StockCount)
        </dd>
        <dt class = "col-sm-2">
            Satılan adet sayısı :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SellCount)
        </dd>
        <dt class = "col-sm-2">
            Aktif / Pasif
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            Kategori :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class = "col-sm-2">
            Yazarı :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author.AuthorName)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Düzenle</a> |
    <a class="btn btn-success" asp-action="Index">Geri'ye Dön</a>
</div>
